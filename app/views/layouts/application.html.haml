!!!
%html{lang: "en", class: "scroll-smooth"}
  %head
    %meta{ content: "text/html; charset=UTF-8", "http-equiv": "Content-Type" }/
    %title= content_for(:title) || "Gingga"
    %meta{ name: "viewport", content: "width=device-width,initial-scale=1" }/
    %meta{ name: "apple-mobile-web-app-capable", content: "yes" }/
    %meta{ name: "mobile-web-app-capable", content: "yes" }/
    = csrf_meta_tags
    = csp_meta_tag
    = yield :head
    %link{ href: "https://fonts.googleapis.com", rel: "preconnect" }/
    %link{ href: "https://fonts.gstatic.com", rel: "preconnect", crossorigin: "" }/
    %link{ href: "https://fonts.googleapis.com/css2?family=Comic+Neue:ital,wght@0,300;0,400;0,700;1,300;1,400;1,700&family=Geist:wght@100..900&display=swap", rel: "stylesheet" }/
    %link{ href: "/icon.png", rel: "icon", type: "image/png" }/
    %link{ href: "/icon.svg", rel: "icon", type: "image/svg+xml" }/
    %link{ href: "/icon.png", rel: "apple-touch-icon" }/
    = stylesheet_link_tag "application", "data-turbo-track": "reload"
    = javascript_include_tag "application", "data-turbo-track": "reload", type: "module"
  %body
    %p.notice= notice
    %p.alert= alert
    .flex.h-screen
      .w-64.flex.flex-col.sidebar
        .p-6.border-b.border-white.border-opacity-10
          .flex.items-center.gap-3
            .logo
              G
            %span.brand-text Gingga
        %nav.flex-1.p-4
          %ul.space-y-2
            %li
              = link_to brand_path, class: "nav-item active" do
                %svg.lucide.lucide-user.w-5.h-5{fill: "none", height: "24", stroke: "currentColor", "stroke-linecap": "round", "stroke-linejoin": "round", "stroke-width": "2", viewbox: "0 0 24 24", width: "24", xmlns: "http://www.w3.org/2000/svg"}
                  %path{d: "M19 21v-2a4 4 0 0 0-4-4H9a4 4 0 0 0-4 4v2"}
                  %circle{cx: "12", cy: "7", r: "4"}
                My Brand
            %li
              = link_to planning_path, class: "nav-item" do
                %svg.lucide.lucide-calendar.w-5.h-5{fill: "none", height: "24", stroke: "currentColor", "stroke-linecap": "round", "stroke-linejoin": "round", "stroke-width": "2", viewbox: "0 0 24 24", width: "24", xmlns: "http://www.w3.org/2000/svg"}>
                  %path{d: "M8 2v4"}
                  %path{d: "M16 2v4"}
                  %rect{height: "18", rx: "2", width: "18", x: "3", y: "4"}
                  %path{d: "M3 10h18"}
                Smart Planning
            %li
              = link_to viral_ideas_path, class: "nav-item" do
                %svg.lucide.lucide-trending-up.w-5.h-5{fill: "none", height: "24", stroke: "currentColor", "stroke-linecap": "round", "stroke-linejoin": "round", "stroke-width": "2", viewbox: "0 0 24 24", width: "24", xmlns: "http://www.w3.org/2000/svg"}>
                  %polyline{points: "22 7 13.5 15.5 8.5 10.5 2 17"}
                  %polyline{points: "16 7 22 7 22 13"}
                Viral Ideas
            %li
              = link_to auto_creation_path, class: "nav-item" do
                %svg.lucide.lucide-wand-sparkles.w-5.h-5{fill: "none", height: "24", stroke: "currentColor", "stroke-linecap": "round", "stroke-linejoin": "round", "stroke-width": "2", viewbox: "0 0 24 24", width: "24", xmlns: "http://www.w3.org/2000/svg"}>
                  %path{d: "m21.64 3.64-1.28-1.28a1.21 1.21 0 0 0-1.72 0L2.36 18.64a1.21 1.21 0 0 0 0 1.72l1.28 1.28a1.2 1.2 0 0 0 1.72 0L21.64 5.36a1.2 1.2 0 0 0 0-1.72"}
                  %path{d: "m14 7 3 3"}
                  %path{d: "M5 6v4"}
                  %path{d: "M19 14v4"}
                  %path{d: "M10 2v2"}
                  %path{d: "M7 8H3"}
                  %path{d: "M21 16h-4"}
                  %path{d: "M11 3H9"}
                Auto Creation
            %li
              = link_to analytics_path, class: "nav-item" do
                %svg.lucide.lucide-chart-column.w-5.h-5{fill: "none", height: "24", stroke: "currentColor", "stroke-linecap": "round", "stroke-linejoin": "round", "stroke-width": "2", viewbox: "0 0 24 24", width: "24", xmlns: "http://www.w3.org/2000/svg"}>
                  %path{d: "M3 3v16a2 2 0 0 0 2 2h16"}
                  %path{d: "M18 17V9"}
                  %path{d: "M13 17V5"}
                  %path{d: "M8 17v-3"}
                Analytics
            %li
              = link_to community_path, class: "nav-item" do
                %svg.lucide.lucide-users.w-5.h-5{fill: "none", height: "24", stroke: "currentColor", "stroke-linecap": "round", "stroke-linejoin": "round", "stroke-width": "2", viewbox: "0 0 24 24", width: "24", xmlns: "http://www.w3.org/2000/svg"}>
                  %path{d: "M16 21v-2a4 4 0 0 0-4-4H6a4 4 0 0 0-4 4v2"}
                  %circle{cx: "9", cy: "7", r: "4"}
                  %path{d: "M22 21v-2a4 4 0 0 0-3-3.87"}
                  %path{d: "M16 3.13a4 4 0 0 1 0 7.75"}
                Community
            %li
              = link_to settings_path, class: "nav-item" do
                %svg.lucide.lucide-settings.w-5.h-5{fill: "none", height: "24", stroke: "currentColor", "stroke-linecap": "round", "stroke-linejoin": "round", "stroke-width": "2", viewbox: "0 0 24 24", width: "24", xmlns: "http://www.w3.org/2000/svg"}>
                  %path{d: "M12.22 2h-.44a2 2 0 0 0-2 2v.18a2 2 0 0 1-1 1.73l-.43.25a2 2 0 0 1-2 0l-.15-.08a2 2 0 0 0-2.73.73l-.22.38a2 2 0 0 0 .73 2.73l.15.1a2 2 0 0 1 1 1.72v.51a2 2 0 0 1-1 1.74l-.15.09a2 2 0 0 0-.73 2.73l.22.38a2 2 0 0 0 2.73.73l.15-.08a2 2 0 0 1 2 0l.43.25a2 2 0 0 1 1 1.73V20a2 2 0 0 0 2 2h.44a2 2 0 0 0 2-2v-.18a2 2 0 0 1 1-1.73l.43-.25a2 2 0 0 1 2 0l.15.08a2 2 0 0 0 2.73-.73l.22-.39a2 2 0 0 0-.73-2.73l-.15-.08a2 2 0 0 1-1-1.74v-.5a2 2 0 0 1 1-1.74l.15-.09a2 2 0 0 0 .73-2.73l-.22-.38a2 2 0 0 0-2.73-.73l-.15.08a2 2 0 0 1-2 0l-.43-.25a2 2 0 0 1-1-1.73V4a2 2 0 0 0-2-2z"}
                  %circle{cx: "12", cy: "12", r: "3"}
                Settings
        .p-4
          = link_to destroy_user_session_path, method: :delete, class: "btn-global-cta", data: { turbo_method: :delete } do
            %svg.lucide.lucide-door-open.w-5.h-5.mr-2{fill: "none", height: "24", stroke: "currentColor", "stroke-linecap": "round", "stroke-linejoin": "round", "stroke-width": "2", viewbox: "0 0 24 24", width: "24", xmlns: "http://www.w3.org/2000/svg"}>
              %path{d: "M13 4h3a2 2 0 0 1 2 2v14"}
              %path{d: "M2 20h3"}
              %path{d: "M13 20h9"}
              %path{d: "M10 12v.01"}
              %rect{height: "16", rx: "2", width: "8", x: "2", y: "4"}
            Logout
      .flex-1.overflow-y-auto.bg-background
        = yield
