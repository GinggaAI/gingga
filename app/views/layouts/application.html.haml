!!!
%html{lang: I18n.locale, class: "scroll-smooth"}
  %head
    %meta{ content: "text/html; charset=UTF-8", "http-equiv": "Content-Type" }/
    %title= content_for(:title) || "Gingga"
    %meta{ name: "viewport", content: "width=device-width,initial-scale=1" }/
    %meta{ name: "apple-mobile-web-app-capable", content: "yes" }/
    %meta{ name: "mobile-web-app-capable", content: "yes" }/
    = csrf_meta_tags
    = csp_meta_tag
    = yield :head
    %link{ href: "https://fonts.googleapis.com", rel: "preconnect" }/
    %link{ href: "https://fonts.gstatic.com", rel: "preconnect", crossorigin: "" }/
    %link{ href: "https://fonts.googleapis.com/css2?family=Comic+Neue:ital,wght@0,300;0,400;0,700;1,300;1,400;1,700&family=Geist:wght@100..900&display=swap", rel: "stylesheet" }/
    %link{ href: "/icon.png", rel: "icon", type: "image/png" }/
    %link{ href: "/icon.svg", rel: "icon", type: "image/svg+xml" }/
    %link{ href: "/icon.png", rel: "apple-touch-icon" }/
    = stylesheet_link_tag "application", "data-turbo-track": "reload"
    = javascript_include_tag "application", "data-turbo-track": "reload", type: "module"
  %body
    .flex.h-screen
      .w-64.flex.flex-col.sidebar{ style: "background-color: #0f172a" }
        .p-6.border-b.border-white.border-opacity-10
          .flex.items-center.gap-3
            = image_tag "gingga_symbol.png", alt: "Gingga", class: "w-8 h-8"
            %span.text-white.font-bold.text-lg Gingga
        %nav.flex-1.p-4
          %ul.space-y-2
            %li.menu-item{ class: menu_item_class(my_brand_path) }
              = link_to my_brand_path, style: menu_item_style(my_brand_path) do
                %svg.lucide.lucide-user.w-5.h-5{fill: "none", height: "24", stroke: "currentColor", "stroke-linecap": "round", "stroke-linejoin": "round", "stroke-width": "2", viewbox: "0 0 24 24", width: "24", xmlns: "http://www.w3.org/2000/svg", style: menu_item_style(my_brand_path)}
                  %path{d: "M19 21v-2a4 4 0 0 0-4-4H9a4 4 0 0 0-4 4v2"}
                  %circle{cx: "12", cy: "7", r: "4"}
                = t('nav.my_brand')
            %li.menu-item{ class: menu_item_class(planning_path) }
              = link_to planning_path, style: menu_item_style(planning_path) do
                %svg.lucide.lucide-calendar.w-5.h-5{fill: "none", height: "24", stroke: "currentColor", "stroke-linecap": "round", "stroke-linejoin": "round", "stroke-width": "2", viewbox: "0 0 24 24", width: "24", xmlns: "http://www.w3.org/2000/svg", style: menu_item_style(planning_path)}
                  %path{d: "M8 2v4"}
                  %path{d: "M16 2v4"}
                  %rect{height: "18", rx: "2", width: "18", x: "3", y: "4"}
                  %path{d: "M3 10h18"}
                = t('nav.smart_planning')
            %li.menu-item{ class: menu_item_class(viral_ideas_path) }
              = link_to viral_ideas_path, style: menu_item_style(viral_ideas_path) do
                %svg.lucide.lucide-trending-up.w-5.h-5{fill: "none", height: "24", stroke: "currentColor", "stroke-linecap": "round", "stroke-linejoin": "round", "stroke-width": "2", viewbox: "0 0 24 24", width: "24", xmlns: "http://www.w3.org/2000/svg", style: menu_item_style(viral_ideas_path)}
                  %polyline{points: "22 7 13.5 15.5 8.5 10.5 2 17"}
                  %polyline{points: "16 7 22 7 22 13"}
                = t('nav.viral_ideas')
            %li.menu-item{ class: menu_item_class(auto_creation_path) }
              = link_to auto_creation_path, style: menu_item_style(auto_creation_path) do
                %svg.lucide.lucide-wand-sparkles.w-5.h-5{fill: "none", height: "24", stroke: "currentColor", "stroke-linecap": "round", "stroke-linejoin": "round", "stroke-width": "2", viewbox: "0 0 24 24", width: "24", xmlns: "http://www.w3.org/2000/svg", style: menu_item_style(auto_creation_path)}
                  %path{d: "m21.64 3.64-1.28-1.28a1.21 1.21 0 0 0-1.72 0L2.36 18.64a1.21 1.21 0 0 0 0 1.72l1.28 1.28a1.2 1.2 0 0 0 1.72 0L21.64 5.36a1.2 1.2 0 0 0 0-1.72"}
                  %path{d: "m14 7 3 3"}
                  %path{d: "M5 6v4"}
                  %path{d: "M19 14v4"}
                  %path{d: "M10 2v2"}
                  %path{d: "M7 8H3"}
                  %path{d: "M21 16h-4"}
                  %path{d: "M11 3H9"}
                = t('nav.auto_creation')
            %li.menu-item{ class: menu_item_class(analytics_path) }
              = link_to analytics_path, style: menu_item_style(analytics_path) do
                %svg.lucide.lucide-chart-column.w-5.h-5{fill: "none", height: "24", stroke: "currentColor", "stroke-linecap": "round", "stroke-linejoin": "round", "stroke-width": "2", viewbox: "0 0 24 24", width: "24", xmlns: "http://www.w3.org/2000/svg", style: menu_item_style(analytics_path)}
                  %path{d: "M3 3v16a2 2 0 0 0 2 2h16"}
                  %path{d: "M18 17V9"}
                  %path{d: "M13 17V5"}
                  %path{d: "M8 17v-3"}
                = t('nav.analytics')
            %li.menu-item{ class: menu_item_class(community_path) }
              = link_to community_path, style: menu_item_style(community_path) do
                %svg.lucide.lucide-users.w-5.h-5{fill: "none", height: "24", stroke: "currentColor", "stroke-linecap": "round", "stroke-linejoin": "round", "stroke-width": "2", viewbox: "0 0 24 24", width: "24", xmlns: "http://www.w3.org/2000/svg", style: menu_item_style(community_path)}
                  %path{d: "M16 21v-2a4 4 0 0 0-4-4H6a4 4 0 0 0-4 4v2"}
                  %circle{cx: "9", cy: "7", r: "4"}
                  %path{d: "M22 21v-2a4 4 0 0 0-3-3.87"}
                  %path{d: "M16 3.13a4 4 0 0 1 0 7.75"}
                = t('nav.community')
            %li.menu-item{ class: menu_item_class(settings_path) }
              = link_to settings_path, style: menu_item_style(settings_path) do
                %svg.lucide.lucide-settings.w-5.h-5{fill: "none", height: "24", stroke: "currentColor", "stroke-linecap": "round", "stroke-linejoin": "round", "stroke-width": "2", viewbox: "0 0 24 24", width: "24", xmlns: "http://www.w3.org/2000/svg", style: menu_item_style(settings_path)}>
                  %path{d: "M12.22 2h-.44a2 2 0 0 0-2 2v.18a2 2 0 0 1-1 1.73l-.43.25a2 2 0 0 1-2 0l-.15-.08a2 2 0 0 0-2.73.73l-.22.38a2 2 0 0 0 .73 2.73l.15.1a2 2 0 0 1 1 1.72v.51a2 2 0 0 1-1 1.74l-.15.09a2 2 0 0 0-.73 2.73l.22.38a2 2 0 0 0 2.73.73l.15-.08a2 2 0 0 1 2 0l.43.25a2 2 0 0 1 1 1.73V20a2 2 0 0 0 2 2h.44a2 2 0 0 0 2-2v-.18a2 2 0 0 1 1-1.73l.43-.25a2 2 0 0 1 2 0l.15.08a2 2 0 0 0 2.73-.73l.22-.39a2 2 0 0 0-.73-2.73l-.15-.08a2 2 0 0 1-1-1.74v-.5a2 2 0 0 1 1-1.74l.15-.09a2 2 0 0 0 .73-2.73l-.22-.38a2 2 0 0 0-2.73-.73l-.15.08a2 2 0 0 1-2 0l-.43-.25a2 2 0 0 1-1-1.73V4a2 2 0 0 0-2-2z"}
                  %circle{cx: "12", cy: "12", r: "3"}
                = t('nav.settings')
        .p-4.space-y-4
          = link_to viral_ideas_path, class: "flex items-center justify-center gap-2 w-full py-3 px-4 rounded-xl text-white font-medium", style: "background: linear-gradient(135deg, #FF6B6B 0%, #4ECDC4 100%)" do
            %svg.w-4.h-4{fill: "none", stroke: "currentColor", "stroke-width": "2", viewbox: "0 0 24 24"}
              %path{d: "M12 2L2 7l10 5 10-5-10-5z"}
              %path{d: "M2 17l10 5 10-5"}
              %path{d: "M2 12l10 5 10-5"}
            = t('nav.new_viral_idea')
          = link_to destroy_user_session_path, method: :delete, class: "flex items-center justify-center gap-2 w-full py-2 px-4 text-gray-400 hover:text-white text-sm", data: { turbo_method: :delete } do
            %svg.w-4.h-4{fill: "none", stroke: "currentColor", "stroke-width": "2", viewbox: "0 0 24 24"}
              %path{d: "M9 21H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h4"}
              %polyline{points: "16,17 21,12 16,7"}
              %line{x1: "21", x2: "9", y1: "12", y2: "12"}
            = t('nav.logout')
      .flex-1.overflow-y-auto.bg-background
        = yield
