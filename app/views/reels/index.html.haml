%main.flex-1.overflow-y-auto
  .p-8
    .max-w-6xl.mx-auto
      .mb-8
        .flex.items-center.justify-between
          %div
            %h1.text-3xl.font-bold.text-gray-900.mb-2 My Videos
            %p.text-gray-600 Manage and view your created video content
          = link_to scene_based_reels_path, class: "inline-flex items-center justify-center gap-2 whitespace-nowrap text-sm font-medium ring-offset-background transition-colors focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 disabled:pointer-events-none disabled:opacity-50 bg-primary text-primary-foreground hover:bg-primary/90 h-9 px-4 py-2 rounded-xl bg-gradient-to-r from-[#A37FFF] to-[#3AC8FF] hover:from-[#3AC8FF] hover:to-[#A37FFF] no-underline text-white" do
            %svg.lucide.lucide-plus.w-4.h-4.mr-2{:fill => "none", :height => "24", :stroke => "currentColor", "stroke-linecap" => "round", "stroke-linejoin" => "round", "stroke-width" => "2", :viewbox => "0 0 24 24", :width => "24", :xmlns => "http://www.w3.org/2000/svg"}
              %path{:d => "M5 12h14"}
              %path{:d => "M12 5v14"}
            Create Video

      - if @reels.any?
        .grid.gap-6.md:grid-cols-2.lg:grid-cols-3
          - @reels.each do |reel|
            .bg-card.text-card-foreground.border-0.shadow-lg.rounded-2xl.hover:shadow-xl.transition-shadow
              .p-6
                .flex.items-start.justify-between.mb-4
                  .flex.items-center.gap-3
                    .w-12.h-12.rounded-lg.flex.items-center.justify-center.text-white{class: reel_icon_class(reel)}
                      = reel_icon_svg(reel)
                    %div
                      %h3.font-semibold.text-lg.text-gray-900= reel_display_title(reel)
                      .inline-flex.items-center.rounded-full.border.text-xs.font-semibold.transition-colors.focus:outline-none.focus:ring-2.focus:ring-ring.focus:ring-offset-2.border-transparent.bg-secondary.text-secondary-foreground.mt-1{:class => "px-2.5 py-0.5 hover:bg-secondary/80"}
                        = reel.status.humanize
                  .flex.items-center.gap-2
                    - if reel.status == "draft"
                      = link_to edit_reel_path(reel), class: "inline-flex items-center justify-center gap-2 whitespace-nowrap text-sm font-medium ring-offset-background transition-colors focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 disabled:pointer-events-none disabled:opacity-50 bg-blue-600 hover:bg-blue-700 text-white h-8 px-3 rounded-lg [&_svg]:pointer-events-none [&_svg]:size-4 [&_svg]:shrink-0" do
                        %svg.lucide.lucide-edit.w-3.h-3.mr-1{:fill => "none", :height => "24", :stroke => "currentColor", "stroke-linecap" => "round", "stroke-linejoin" => "round", "stroke-width" => "2", :viewbox => "0 0 24 24", :width => "24", :xmlns => "http://www.w3.org/2000/svg"}
                          %path{:d => "M11 4H4a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7"}
                          %path{:d => "M18.5 2.5a2.121 2.121 0 0 1 3 3L12 15l-4 1 1-4 9.5-9.5z"}
                        Edit
                    = link_to reel_path(reel), class: "inline-flex items-center justify-center gap-2 whitespace-nowrap text-sm font-medium ring-offset-background transition-colors focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 disabled:pointer-events-none disabled:opacity-50 border border-input bg-background hover:bg-accent hover:text-accent-foreground h-8 px-3 rounded-lg [&_svg]:pointer-events-none [&_svg]:size-4 [&_svg]:shrink-0" do
                      View

                .text-sm.text-gray-500.mb-4
                  Created #{time_ago_in_words(reel.created_at)} ago

                - if reel.reel_scenes_count > 0
                  .text-xs.text-gray-400
                    #{pluralize(reel.reel_scenes_count, 'scene')}
      - else
        .text-center.py-16
          .w-24.h-24.mx-auto.mb-6.bg-gray-100.rounded-full.flex.items-center.justify-center
            %svg.lucide.lucide-video.w-8.h-8.text-gray-400{:fill => "none", :height => "24", :stroke => "currentColor", "stroke-linecap" => "round", "stroke-linejoin" => "round", "stroke-width" => "2", :viewbox => "0 0 24 24", :width => "24", :xmlns => "http://www.w3.org/2000/svg"}
              %path{:d => "m16 13 5.223 3.482a.5.5 0 0 0 .777-.416V7.87a.5.5 0 0 0-.752-.432L16 10.5"}
              %rect{:height => "12", :rx => "2", :width => "14", :x => "2", :y => "6"}
          %h2.text-2xl.font-bold.text-gray-900.mb-2 No videos yet
          %p.text-gray-500.mb-6.max-w-sm.mx-auto Create your first video to get started with AI-powered content generation
          = link_to scene_based_reels_path, class: "inline-flex items-center justify-center gap-2 whitespace-nowrap text-sm font-medium ring-offset-background transition-colors focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 disabled:pointer-events-none disabled:opacity-50 bg-primary text-primary-foreground hover:bg-primary/90 h-10 px-6 py-2 rounded-xl bg-gradient-to-r from-[#A37FFF] to-[#3AC8FF] hover:from-[#3AC8FF] hover:to-[#A37FFF] no-underline text-white" do
            %svg.lucide.lucide-plus.w-4.h-4.mr-2{:fill => "none", :height => "24", :stroke => "currentColor", "stroke-linecap" => "round", "stroke-linejoin" => "round", "stroke-width" => "2", :viewbox => "0 0 24 24", :width => "24", :xmlns => "http://www.w3.org/2000/svg"}
              %path{:d => "M5 12h14"}
              %path{:d => "M12 5v14"}
            Create Your First Video