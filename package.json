{
  "name": "app",
  "private": true,
  "devDependencies": {
    "autoprefixer": "^10.4.21",
    "esbuild": "^0.25.8",
    "postcss": "^8.5.6",
    "tailwindcss": "3.4.13"
  },
  "scripts": {
    "build": "esbuild app/javascript/*.* --bundle --sourcemap --format=iife --outdir=app/assets/builds --public-path=/assets",
    "build:css": "npx tailwindcss -i ./app/assets/stylesheets/application.tailwind.css -o ./app/assets/builds/application.css --minify",
    "a11y": "pa11y-ci"
  },
  "dependencies": {
    "@hotwired/stimulus": "^3.2.2",
    "@hotwired/turbo-rails": "^8.0.16",
    "pa11y-ci": "^2.4.2"
  }
}
